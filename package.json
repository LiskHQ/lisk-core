{
	"name": "lisk-core",
	"version": "3.0.0-beta.1",
	"description": "Lisk blockchain application platform",
	"author": "Lisk Foundation <admin@lisk.io>, lightcurve GmbH <admin@lightcurve.io>",
	"license": "Apache-2.0",
	"private": true,
	"keywords": [
		"cryptocurrency",
		"blockchain",
		"lisk",
		"nodejs",
		"javascript"
	],
	"homepage": "https://github.com/LiskHQ/lisk-core#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/LiskHQ/lisk-core.git"
	},
	"bugs": {
		"url": "https://github.com/LiskHQ/lisk-sdk/issues"
	},
	"engines": {
		"node": ">=12.18.0",
		"npm": ">=6.14.4"
	},
	"main": "dist/index.js",
	"scripts": {
		"lint": "eslint --ext .js,.ts .",
		"lint:fix": "eslint --fix --ext .js,.ts .",
		"format": "prettier --write '**/*'",
		"prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
		"prebuild": "if test -d dist; then rm -r dist; fi; rm -f tsconfig.tsbuildinfo",
		"build": "tsc",
		"test": "mocha test",
		"version": "oclif-dev readme --multi --dir=docs/commands && git add README.md docs"
	},
	"bin": {
		"core": "./bin/run"
	},
	"oclif": {
		"bin": "core",
		"commands": "./dist/commands",
		"plugins": [
			"@oclif/plugin-help"
		]
	},
	"files": [
		"/bin",
		"/npm-shrinkwrap.json",
		"/oclif.manifest.json",
		"/dist",
		"/config",
		"/docs"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"dependencies": {
		"@liskhq/lisk-db": "0.1.0-alpha.0",
		"@liskhq/lisk-passphrase": "3.0.0",
		"@oclif/command": "1.6.1",
		"@oclif/config": "1.15.1",
		"@oclif/plugin-help": "3.1.0",
		"fs-extra": "9.0.1",
		"inquirer": "7.3.2",
		"lisk-sdk": "5.0.0-alpha.2",
		"tar": "6.0.2",
		"tslib": "1.13.0",
		"axios": "0.19.2"
	},
	"devDependencies": {
		"@oclif/dev-cli": "1.22.2",
		"@oclif/test": "1.2.6",
		"@types/chai": "4.2.10",
		"@types/chai-as-promised": "7.1.2",
		"@types/expect": "24.3.0",
		"@types/fs-extra": "9.0.1",
		"@types/mocha": "7.0.2",
		"@types/node": "12.12.11",
		"@types/sinon": "7.5.2",
		"@types/sinon-chai": "3.2.3",
		"@types/tar": "4.0.3",
		"@typescript-eslint/eslint-plugin": "2.28.0",
		"@typescript-eslint/parser": "2.28.0",
		"chai": "4.2.0",
		"chai-as-promised": "7.1.1",
		"eslint": "6.8.0",
		"eslint-config-airbnb-base": "14.0.0",
		"eslint-config-lisk-base": "1.2.2",
		"eslint-config-prettier": "6.10.0",
		"eslint-plugin-chai-expect": "2.1.0",
		"eslint-plugin-import": "2.20.1",
		"eslint-plugin-mocha": "6.3.0",
		"globby": "10.0.2",
		"husky": "4.2.5",
		"lint-staged": "10.2.11",
		"mocha": "7.1.0",
		"nyc": "15.0.0",
		"prettier": "2.0.5",
		"sinon": "9.0.0",
		"sinon-chai": "3.5.0",
		"ts-node": "8.6.2",
		"typescript": "3.8.3"
	}
}
